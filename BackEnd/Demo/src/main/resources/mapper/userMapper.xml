<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.backend.mapper.userMapper">
    
    <select id="selectUser" resultType="UserVO">
        SELECT * from user
    </select>
    
    <select id="newUserCheck" resultType="UserVO">
    	select * from user where username='${name}' and useremail='${email}'
    </select>
    
    <select id="getNewUserid" resultType="UserVO">
    	select userid from user order by userid desc limit 1
    </select>
    
    <insert id="newUser" parameterType="UserVO">
    	insert into user values(#{userid},#{name},#{email});
    </insert>
    
</mapper>